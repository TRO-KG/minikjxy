.banner image{
  width: 100%;
  height: 410rpx;
}
.address{
  box-sizing: border-box;
  width: 100%;
  padding: 6rpx 20rpx;
  font-size: 30rpx;
  background-color: #fff;
}
.address icon{
  font-size: 34rpx;
}
.location{
  color: #00f;
}
.time{
  color: rgb(167, 167, 167);
}
.tel{
  color: rgb(214, 0, 64);
}
.actnav{
  background-color: #fff;
  margin-top: 10rpx;
  text-align: center;
  font-size: 30rpx;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
}
.actnav-box{
  display: inline-block;
  width: 20%;
  padding: 4rpx;
  box-sizing: border-box;
}
.actnav-box.active{
  background-color:rgba(255, 195, 16, 0.212);
  color: #ffc310;
}
.actnav-box icon{
  font-size: 80rpx;
}
.product{
  width: 100%;
  margin-top: 10rpx;
  margin-bottom: 102rpx;
}
.class-title{
  background-color: #fff;
  font-size: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.pro-list{
  overflow: hidden;
}
.class-fu,.class-title text{
  height: 40rpx;
  line-height: 40rpx;
  display: inline-block;
  vertical-align: middle;
}
.class-fu{
  background-color: #ffc310;
  width: 10rpx;
}
.class-title text{
  margin-left: 20rpx;
}
.pro-box{
  border-radius: 16rpx;
  margin: 0.5%;
  box-sizing: border-box;
  float: left;
  overflow: hidden;
  width: 49%;
  height: 450rpx;
  border:1px solid #eee;
  background-color: #fff; 
}
.pro-image{
  width: 100%;
  height: 77%;
}
 .pro-image image{
  width: 100%;
  height: 100%;
}
.desc{
  font-size: 26rpx;
  font-weight: bold;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
  text-align: center;
  width: 100%;
}
.pricebox{
  font-size: 32rpx;
  overflow: hidden;
  text-align: center;
  margin-top: 6rpx;
}
.price{
  color: #f00;
  float: left;
  margin-left: 20rpx;
}
.footernav{
  background-color: #fff;
  border-top: 1rpx solid rgba(167, 167, 167, 0.342);
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  text-align: center;
  padding-top: 4rpx;
  box-sizing: border-box;
}
.footernav icon{
  font-size: 40rpx;
  color: #1afa29;
}