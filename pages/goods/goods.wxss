.container{
  overflow: hidden;
}
.headerbox{
  display: flex;
  justify-content: space-around;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: rgba(255, 255, 255, 0.555);
  position: fixed;
  width: 100%;
}
.headerbox text,.headerbox icon{
  display: inline-block;
  vertical-align: middle;
}
.headerbox view:nth-of-type(1) icon{
  font-size: 45rpx;
}
.headerbox text{
  margin-left: 6rpx;
}
.goodsbox{
 background-color: #fff;
}
.goodsimgbox{
  width: 80%;
  height: 700rpx;
  margin: 80rpx auto 0;
}
.goodsimgbox image{
  width: 100%;
  height: 100%;
}
.descbox{
  overflow: hidden;
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.desc{
  float: left;
}
.sharebox{
  float: right;
  margin-right: 1rpx;
}
.sharebox icon{
  font-size: 40rpx;
  color: #707070;
}
.share{
  margin-left: 40rpx;
}
.pricebox{
  padding-left: 30rpx;
  padding-bottom: 30rpx;
}
.pricenow{
  color: #f00;
  font-size: 40rpx;
}
.priceold{
  padding-left: 20rpx;
  text-decoration:line-through;
}