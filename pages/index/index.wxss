.banner image{
  width: 100%;
  height: 410rpx;
}
.address,.product{
  box-sizing: border-box;
  width: 100%;
  padding: 6rpx 20rpx;
  font-size: 30rpx;
  background-color: #fff;
}
.address icon{
  font-size: 34rpx;
}
.location{
  color: #00f;
}
.time{
  color: rgb(167, 167, 167);
}
.tel{
  color: rgb(214, 0, 64);
}
.actnav{
  padding-top: 10rpx;
  padding-bottom: 6rpx;
  background-color: #fff;
  margin-top: 10rpx;
  text-align: center;
  font-size: 30rpx;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
}
.actnav-box{
  display: inline-block;
  width: 20%;
  box-sizing: border-box;
}
.actnav-box.active{
  background-color: blue;
}
.actnav-box icon{
  font-size: 80rpx;
}
.product{
  width: 100%;
  margin-top: 10rpx;
  overflow: hidden;
}
.class-title{
  font-size: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom:1rpx dashed rgb(167, 167, 167);
}
.class-fu,.class-title text{
  height: 40rpx;
  line-height: 40rpx;
  display: inline-block;
  vertical-align: middle;
}
.class-fu{
  background-color: #ffc310;
  width: 10rpx;
}
.class-title text{
  margin-left: 20rpx;
}
.pro-box{
  margin: 0.5%;
  box-sizing: border-box;
  float: left;
  width: 49%;
  height: 510rpx;
  border:1px solid #eee;
}
.pro-image{
  width: 100%;
  height: 90%;
  position: relative;
}
.pro-image image{
  width: 100%;
  height: 100%;
}
.desc{
  font-size: 30rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.3);
  color: #fff;
  height: 40rpx;
  line-height: 40rpx;
}
.price{
  overflow: hidden;
  text-align: center;
}
.price text:nth-child(1){
  margin-left: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  float: left;
  color: #f00;
}
.buy{
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #fff;
  margin-right: 10rpx;
  float: right;
  border-radius: 5rpx;
  background-color: #f40;
  width: 160rpx;
}