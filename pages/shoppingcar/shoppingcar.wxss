.editbox{
  color: #8b8b8a;
  margin-bottom: 10rpx;
  background-color: #fff;
  overflow: hidden;
  font-size: 34rpx;
}
.selectall,.edit{
  height: 90rpx;
  line-height: 90rpx;
  float: left;
}
.selectall view{
  display: inline-block;
  vertical-align: middle;
}
.selectall view:nth-child(2){
  margin-left: 15rpx;
}
.selectbtn{
  margin-left: 30rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 1rpx #8b8b8a solid;
}
.edit{
  float: right;
  margin-right: 30rpx;
}
.goodslist,.totalprice{
  background-color: #fff;
}
.goodsselect,.goodsimg,.goodsdesc{
  display: inline-block;
  vertical-align: middle;
}
.goodsimg{
  margin-left: 30rpx;
  width: 200rpx;
  height: 200rpx;
  padding: 10rpx;
  box-sizing: border-box;
}
.goodsimg image{
  width: 100%;
  height: 100%;
}
.goodsdesc{
  height: 200rpx;
  width: 410rpx;
  margin-left: 30rpx;
  position: relative;
}
.goodsdesc view:nth-child(1){
  margin-top: 20rpx;
}
.goodsdesc view:nth-child(2){
  margin-top: 20rpx;
}
.goodsdesc view:nth-child(3){
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}
.totalprice{
  border: 1rpx #eae9e7 solid;
  border-bottom: 0;
  width: 100%;
  height: 80rpx;
  position: fixed;
  bottom: 0;
  overflow: hidden;
}
.totalbox{
  float: right;
  width: 65%;
  font-size: 40rpx;
}
.totalbox view{
  display: inline-block;
  vertical-align: middle;
}
.total,.buy{
  margin-top: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.total text{
  color: #f00;
}
.buy{
  float: right;
  padding: 4rpx 50rpx;
  text-align: center;
  margin-right: 20rpx;
  background-color: #f40;
  border-radius: 10rpx;
  color: #fff;
}